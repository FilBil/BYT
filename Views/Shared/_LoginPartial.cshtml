@using Microsoft.AspNetCore.Identity
@using VetReserve.Areas.Identity.Data

@inject SignInManager<VetReserveUser> SignInManager
@inject UserManager<VetReserveUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">

        <p id="manage" class="nav-link " asp-area="Identity" style="color: #DFEEE0" asp-page="/Account/Manage/Index" title="Manage">Witaj @UserManager.GetUserName(User)!</p>
    </li>
   
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>

        </form>
    </li>
}
else
{
    <li class="nav-item">

        <a class="nav-link " id="register"style="color: #DFEEE0"  asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " id="login" style="color: #DFEEE0" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>

    </li>
}
</ul>
